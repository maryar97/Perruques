{% extends 'base.html.twig' %}

{% block title %}Création de la commande{% endblock %}

{% block body %}
<div class="container position-relative zindex-2 pt-5 pb-lg-5 pb-md-4 pb-2">
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(form) }}
            <h1 class="h2 pb-2">Création de la commande</h1>
            <h3 class="fs-base fw-normal text-body text-uppercase pb-1 pb-sm-1">1.
                <span class="text-decoration-underline ms-1"> Shipping details </span>
            </h3>
            <p> Si vous n'avez d'adresse ajouter en une dans votre espace compte <a href="#">Ajouter une adresse</a>
            </p>
            <h3 class="fs-base fw-normal text-body text-uppercase pb-2 pb-sm-3">2.<span class="text-decoration-underline ms-1">Choisir votre livraison</span></h3>
            {{ form_row(form.adresse)|replace({'[-br]' : '<br/>'})|raw }}
            <h3 class="fs-base fw-normal text-body text-uppercase mt-n4 mt-md-n3 pt-5 pb-2 pb-sm-3">3. <span class="text-decoration-underline ms-1">Mode de livraison</span></h3>
            {{ form_row(form.transporteur)|replace({'[-br]' : '<br/>'})|raw }}
        </div>
        <div class="col-lg-5 offset-lg-1 pt-1">
            {# <h2 class="pb-2 pt-md-2 my-4 mt-lg-5">Récapitulatif de la commande <span class='fs-ase fw-normal text-muted'>({{ recapCart|length }} produit) </span></h2> #}
            {# <div class="d-flex align-items-center justify-content-between border-top fs-xl pt-4 mb-4">
                Total: <span class="fs-3 fw-semibold text-dart ms-2">{{ (total / 100)|number_format(2, ',', '.') }} £</span>
            </div>
            <div class="mt-5 text-center">
                <button class="btn btn-lg btn-danger" type="submit"
                        style="border-radius: 6px; position: relative; top: 20px;">Valider votre commande
                </button>
            </div> #}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
