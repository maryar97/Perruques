{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rubriqueart</th>
                <th>Sousrubriqueart</th>
                <th>Libcourt</th>
                <th>Liblong</th>
                <th>Photo</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.rubriqueart }}</td>
                <td>{{ produit.sousrubriqueart }}</td>
                <td>{{ produit.libcourt }}</td>
                <td>{{ produit.liblong }}</td>
                <td>{{ produit.photo }}</td>
                <td>{{ produit.prixachat }}</td>
                <td>{{ produit.stock }}</td>
                <td>
                    <a href="{{ path('app_produit_crud_afficher', {'id': produit.id}) }}">Afficher</a>
                    <a href="{{ path('app_produit_crud_modifier', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun n'enregistrement n'a été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_crud_nouveau') }}">Créer un nouveau</a>
{% endblock %}
