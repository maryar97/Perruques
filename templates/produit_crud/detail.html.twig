{% extends 'base.html.twig' %}

{% block title %}
	Détails de
	{{ produit.libcourt}}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>
					Détails de
					{{ produit.libcourt}}
				</h1>

			</div>
			<div class="col-6">
				<div class="carousel-inner">
					{% for produit in categorie.Produit %}
						<img src="/images/{{ produit.photo }}" class="card-img-top" alt="{{ produit.photo}}"><article class="card h-100">
							<div class="card-body">		
								<a href="{{ path('app_produit_crud_detail', {'id':produit.id}) }}"> 
								</a>

							</div>
						</article>
					{% endfor %}
				</div>

			</div>
			<div class="col-6">
				<p>
					Catégorie :
					{{ produit.categorie.nomcat }}
				</p>
				<p>
					{{ produit.liblong }}
				</p>
				
				<p>
					Prix :
					{{ produit.prixachat }}£
				</p>


					{% if produit.stock > 0 %}
						<a href="#" class="btn btn-danger"> Ajouter au panier </a>
					{% else %}
						<p class="text-danger"> Temporairement en rupture de stock </p>
					{% endif %}
					
				</p>
			</div>

			{# {% for produit in produits %}
															    <div class="col-4">
																	<div class="card"> 
																		<img src="/images/{{ produit.photo }}" class="card-img-top" alt="{{ produit.photo}}"> 
																	</div> 
																</div> 						       
												            {% endfor %} #}
		</section>
	</main>


{% endblock %}
